page {
  background: #fcefde;
}

.fixed {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
}

form {
  width: 100%;
}

label.active {
  background: #000;
}

.container {
  margin: 30px 8%;
  padding: 0;
  display: block;
  color: #666;
}

.question {
  font-size: 26px;
  color: #ee7c1b;
  text-align: center;
  margin-bottom: 10px;
  letter-spacing: 2px;
}

.title {
  position: relative;
  padding-left: 4px;
  font-size: 20px;
  color: #265495;
  margin-bottom: 16px;
}

.title .wxParse-span {
  color: #ee7c1b;
}

.title view {
  display: inline;
}

.title::after {
  content: '';
  position: absolute;
  left: -4px;
  top: 9px;
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background-color: #265495;
}

.previous {
  display: block;
  width: 122px;
  height: 44px;
  padding-top: 20px;
}

.previous image {
  width: 100%;
  height: 100%;
}

.btn {
  display: block;
  background-color: #fff;
  color: #10549a;
  margin-bottom: 20px;
  height: 46px;
  line-height: 46px;
  text-align: center;
  border: #fff 1px solid;
}

.questionSubmit,
.generation {
  display: block;
  color: #fff;
  margin-bottom: 20px;
  height: 48px;
  line-height: 48px;
  border-radius: 5px;
  text-align: center;
}

.questionSubmit.active,
.generation {
  background-color: #ee7c1b;
  cursor: pointer;
}

.generation {
  opacity: 0.8;
}

.questionSubmit.default {
  background-color: #666;
  cursor: not-allowed;
}

button::after {
  border: none;
}

.form-group .btn.active {
  background-color: #eecf8d;
  border: #ee7c1b 1px solid;
}

.form-description {
  font-size: 14px;
  line-height: 18px;
  overflow: hidden;
  margin-bottom: 6px;
}

.form-description:last-child {
  margin-bottom: 10px;
}

.form-description .left {
  display: inline-block;
  float: left;
  width: 18%;
  color: #ee7c1b;
  text-align: left;
}

.form-description .right {
  display: inline-block;
  float: left;
  width: 78%;
  text-align: left;
  color: #666;
}

.error {
  color: #ee7c1b;
  text-align: center;
  font-size: 14px;
}