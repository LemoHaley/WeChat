page {
  background: #fff;
  width: 100%;
  height: 100%;
}

.loading {
  position: fixed;
  top: 40%;
  left: 50%;
  width: 26px;
  height: 26px;
  transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  -moz-transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
  -o-transform: translate(-50%, -50%);
}

.content-landing {
  margin: 0;
  padding: 0;
  display: block;
  height: 100%;
  color: #666;
}

image {
  width: 100%;
  height: 100%;
}

.testNow {
  height: 48px;
  line-height: 48px;
  text-align: center;
  font-weight: normal;
  font-size: 24px;
  color: #fff;
  background-color: #ff7500;
  border-radius: 5px;
  letter-spacing: 1px;
  position: absolute;
  bottom: 10%;
  width: 80%;
  left: 10%;
}
.testNow::after {
  border:0;
}